---
import BaseLayout from '../layouts/BaseLayout.astro';

const title = 'About WTLT';
const description = 'Learn about our history, beliefs, pastor, and mission to love God and serve others.';
const permalink = `${Astro.site.href}about`;
---

<BaseLayout title={title} description={description} permalink={permalink} current="about">
  <div class="container">
    <h1>About WTLT Church</h1>
    
    <figure class="about-image">
      <picture>
        <source srcset="https://svg.undraw.co/undraw_together_re_a8x4.svg" media="(min-width: 600px)" type="image/svg+xml">
        <img src="https://svg.undraw.co/undraw_together_re_a8x4.svg" alt="Illustration of a welcoming diverse community gathering together in fellowship" width="330">
      </picture>
    /* Inherits theme colors automatically â€“ no hardcoded values for perfect light/dark mode sync */
  }

  .container ul {
    list-style: disc inside;
    padding-left: 1em;
    font-size: 1.1em;
  }

  .container li {
    margin-bottom: 0.8em;
  }

  .about-image {
    float: right;
    margin: -3em -7em 2em 2em;
    max-width: 300px;
  }

  .about-image img {
    border-radius: 8px;
    margin-bottom: 1.5em;
    width: 100%;
    height: auto;
  }

  .about-image picture {
    display: block;
  }

  @media (max-width: 1020px) {
    .about-image {
      float: none;
      margin: 0 auto 2em;
      max-width: 400px;
      text-align: center;
    }
  }
</style>
