---
import BaseLayout from '../layouts/BaseLayout.astro';

const title = 'WTLT';
const description = 'A welcoming community dedicated to loving God, loving others, and growing in faith.';
const permalink = Astro.site.href;
---

<BaseLayout title={title} description={description} permalink={permalink}>
  <div class="home-container">
    <div class="home-copy">
      <h1>WAY TRUTH AND LIFE TABERNACLE</h1>
      <p>We are a vibrant family of believers committed to worship, fellowship, and sharing the hope of Jesus Christ. Whether you're exploring faith or looking for a church home, you belong here.</p>
      <p>Join us this Sunday!</p>
      
      <div class="service-times">
        <h2>Service Times</h2>
        <ul>
          <li><strong>Sunday Main Service:</strong> 10:00 AM</li>
          <li><strong>Tuesdays & Thursdays Prayer:</strong> 5:30 PM</li>
          <li><strong>Radio Program:</strong> Thursday at 11:00 AM</li>
        </ul>
      </div>
      
      <p>Learn more <a href="/about">about us</a> or check out recent <a href="/blog">sermons</a>.</p>
    </div>

    <div class="hero-image-container">
      <picture>
        <source srcset="https://svg.undraw.co/undraw_community_re_cyrm.svg" media="(min-width: 600px)" type="image/svg+xml">
        <img class="hero-image" alt="Illustration of a diverse community gathering in fellowship" src="https://svg.undraw.co/undraw_community_re_cyrm.svg" width="550" height="466">
      </picture>
      <p class="caption">
        Updates by
        <a href="https://waytruth.netlify.app" target="_blank" rel="noopener">WTLT</a>
      </p>
    </div>
  </div>
</BaseLayout>

<style>
  .home-container {
    align-items: center;
    display: flex;
    flex: 1;
    justify-content: center;
    margin: 2em 0;
    min-height: 400px;
  }

  .home-copy {
    flex: 1;
    padding: 0 1em;
  }

  .home-copy h1 {
    font-weight: 700;
    margin-bottom: 0.5em;
    line-height: 1.3;
  }

  .home-copy p {
    font-size: 1.4em;
  }

  .service-times {
    margin: 2em 0;
  }

  .service-times h2 {
    font-size: 1.5em;
    margin-bottom: 0.5em;
  }

  .service-times ul {
    list-style: none;
    padding: 0;
    font-size: 1.2em;
  }

  .service-times li {
    margin-bottom: 0.5em;
  }

  .hero-image-container {
    margin: 0 1em;
    text-align: center;
  }

  .hero-image-container picture {
    display: block;
    min-height: 250px;
  }

  .caption {
    font-size: .8em;
    font-style: italic;
    text-align: left;
  }

  .hero-image {
    width: 100%;
    max-width: 550px;
    margin-bottom: 1em;
  }

  @media (max-width: 1200px) {
    .home-copy p {
      font-size: 1.2em;
    }

    .hero-image {
      max-width: 400px;
    }
  }

  @media (max-width: 800px) {
    .home-container {
      flex-direction: column;
    }

    .home-copy {
      flex: 0;
      padding-bottom: 2em;
      text-align: center;
    }

    .service-times {
      text-align: center;
    }
  }
</style>
